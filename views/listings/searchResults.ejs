<% layout("/layouts/boilerplate") -%>

    <h3 class="mt-3">Search results for "
        <%= query %>"</h3>

    <div class="row mt-4">
        <% if (results.length === 0) { %>
            <div class="no-results-container">
                <lottie-player src="https://assets2.lottiefiles.com/packages/lf20_HpFqiS.json" background="transparent" speed="1" style="width: 270px; height: 270px;" autoplay>
                </lottie-player>
                <h3 class="mt-3 fw-bold">No Listings Found</h3>
                <p class="text-muted">Try searching with different keywords or filters.</p>

                <a href="/listings" class="btn btn-outline-dark mt-2">
                 View All Listings
            </a>
            </div>

            <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

            <% } else { %>

                <!-- ✔ Display Results -->
                <% results.forEach(listing => { %>
                    <div class="col-md-4 col-sm-6 mb-4">
                        <a href="/listings/<%= listing._id %>" class="listing-link">
                            <div class="card shadow-sm listing-card">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= listing.title %>
                                    </h5>
                                    <p class="card-text text-muted">
                                        <%= listing.location %>,
                                            <%= listing.country %>
                                    </p>
                                    <p><b>Category:</b>
                                        <%= listing.category %>
                                    </p>
                                    <p><b>₹</b>
                                        <%= listing.price.toLocaleString("en-IN") %> / night</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }) %>

                        <% } %>
    </div>

    <style>
        a.listing-link {
            text-decoration: none;
            color: inherit;
        }
        
        .listing-card {
            transition: transform 0.3s ease;
        }
        
        .listing-card:hover {
            transform: scale(1.05);
        }
        
        .btn-outline-dark {
            border-radius: 10px;
        }
        
        .btn-outline-dark:hover {
            transform: scale(1.05);
        }
        
        .no-results-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            /* Horizontal center */
            justify-content: center;
            /* Vertical center */
            min-height: 70vh;
            /* Takes 70% of screen height */
            text-align: center;
        }
        
        a.listing-link {
            text-decoration: none;
            color: inherit;
        }
        
        .listing-card {
            transition: transform 0.3s ease;
        }
        
        .listing-card:hover {
            transform: scale(1.05);
        }
        
        .btn-outline-dark {
            border-radius: 10px;
            transition: transform 0.3s ease;
        }
        
        .btn-outline-dark:hover {
            transform: scale(1.05);
        }
        
        .listing-card {
            border: none !important;
            box-shadow: none !important;
            transition: transform 0.3s ease;
        }
        
        .listing-card:hover {
            transform: scale(1.04);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }
    </style>